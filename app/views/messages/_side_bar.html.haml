.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.name
      %ul.side-bar__user-name__top-items__icons 
        %li.side-bar__user-name__top-items__icons__new-group
        = link_to new_group_path(@group),class: "new-btn" do
          %i.far.fa-edit
        %li.side-bar__user-name__top-items__icons__edit-user
        = link_to edit_user_path(current_user),class: "edit-btn" do
          %i.fas.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-bar__group-list__group
          .group-name
            = group.name
          .message
            = group.show_last_message